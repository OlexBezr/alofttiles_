{%- liquid
	if customer
  	assign profile_link = routes.account_url
	else
  	assign profile_link = routes.account_login_url
	endif
-%}
<div class="thb-secondary-area">
	
  
    <div class="thb-secondary-item" id="quick-search" title="{{ 'sections.header.search' | t }}">
       <div class="thb-quick-search no-js-hidden" tabindex="-1">
      	<div class="thb-quick-search--form">
      		<form role="search" method="get" class="searchform" action="{{ routes.search_url }}">
      			<fieldset>
                    <input type="search" class="search-field" placeholder="{{ 'sections.header.search' | t | escape }}" value="{{ search.terms | replace: '*', '' }}" name="q" autocomplete="off">
      				<div class="thb-search-icon">{% render 'svg-icons' with 'search' %}</div>
      			</fieldset>
      		</form>
      	</div>
      	{%- if section.settings.predictive_search_enabled -%}
      	<div class="thb-quick-search--results-container">
      		<div class="thb-quick-search--results"></div>
      		<span class="loading-overlay">
      			{%- render 'svg-icons' with 'thb-loading' -%}
      		</span>
      	</div>
      	{%- endif -%}
      	{%- if section.settings.search_menu != blank -%}
      	<div class="thb-quick-search--popular">
      		<span class="thb-quick-search--label">{{ 'sections.header.popular_searches' | t }}</span>
      		<scroll-shadow>
      			<div>
      				{%- for link in section.settings.search_menu.links -%}
      				<a href="{{ link.url }}" title="{{ link.title | escape }}" class="button small outline pill">{{ link.title }}</a>
      				{%- endfor -%}
      			</div>
      		</scroll-shadow>
      	</div>
      	{%- endif -%}
      </div>
      </div>
	{% if shop.customer_accounts_enabled %}
    <a class="thb-secondary-item thb-secondary-myaccount" href="{{ profile_link | escape }}" title="{{ 'sections.header.my_account' | t }}">{% render 'svg-icons' with 'myaccount' %}</a>
  {% endif %}
  {% capture the_snippet_fave_icon_menu %}{% render 'ssw-widget-faveicon-menu' with product.id %}{% endcapture %}
  {% unless the_snippet_fave_icon_menu contains 'Liquid error' %}
  {{ the_snippet_fave_icon_menu }}
  {% endunless %}    
	<a class="thb-secondary-item thb-secondary-cart" href="{{ routes.cart_url }}" id="cart-drawer-toggle"><div class="thb-secondary-item-icon">{% render 'svg-icons' with 'cart' %} <span class="thb-item-count">{%- if cart.item_count > 99 -%}{%- render 'svg-icons' with 'thb-asterisk' -%}{%- else -%}{{ cart.item_count }}{%- endif -%}</span></div></a>
</div>
