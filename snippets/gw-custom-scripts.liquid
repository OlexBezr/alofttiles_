{% if template contains 'product' %}

<script>
  window.addEventListener('sswhelperload', () => { 
    if(typeof sswRun === 'function' && window.innerWidth <=1068) {
      sswRun(function(){
        const WishlistButton = setInterval(function(){
          if(ssw('#widget-fave-html').length){

            ssw('.flickity-viewport').prepend(ssw('#widget-fave-html'));
            clearInterval(WishlistButton);
          }
        }, 1000);
      });
    }
  })
</script>

{% endif %}

{% comment %} 
<script>
  window.addEventListener('sswhelperload', () => { 
    if(typeof sswRun === 'function') {
      sswRun(function(){
        const WishlistButton = setInterval(function(){
          if(ssw("#ssw-page #ssw-fave-page-side-bar .ssw-fave-product-price").length){
            ssw(".ssw-fave-product-price").each(function() {
              var priceText = $(this).text();
              $(this).text(priceText + ' per sq. ft.');
            });
            clearInterval(WishlistButton);
          }
        }, 1000);
      });
    }
  })
</script>
{% endcomment %}