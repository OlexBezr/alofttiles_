<style>
  .ssw-link-fave-menu {
    display: inline-flex;
    padding: 0 5px;
    align-items: center;
    font-size: 20px;
  }
  .ssw-link-fave-menu:hover {
    color:var(--color-accent);
  }
  .ssw-counter-fave-menu {
    font-size: 15px;
  }
  
  #create_customer .ssw-accept-wrapper {
    display: none;
  }
